# - Default Values ------------------------------------------------------
VERSION=v3.3.2
SCRIPT_NAME=$(basename $0)
export OUDBASE_BIN="$(cd "$(dirname "${BASH_SOURCE[0]}")" ; pwd -P)"
# - End of Default Values ------------------------------------------------------

# - Main -----------------------------------------------------------------------
${OUDBASE_BIN}/oud_start_stop.sh -v -a $1
# - EOF ------------------------------------------------------------------------
