# ------------------------------------------------------------------------------
# Sample oudenv.conf file for testing
# ------------------------------------------------------------------------------

# Base directories
export OUD_BASE="/u00/app/oracle/local/oudbase"
export ORACLE_BASE="/u00/app/oracle"
export ORACLE_INSTANCE_BASE="/u00/app/oracle/instances"

# Configuration directories
export ETC_BASE="${OUD_BASE}/etc"
export BIN_BASE="${OUD_BASE}/bin"
export LOG_BASE="${OUD_BASE}/log"
export TEMPLATE_BASE="${OUD_BASE}/templates"

# Default OUD settings
export OUD_DEFAULT_PORT=1389
export OUD_DEFAULT_PORT_SSL=1636
export OUD_DEFAULT_PORT_ADMIN=4444
export OUD_DEFAULT_PORT_REP=8989

# LDAP settings
export TVDLDAP_LDAPHOST="localhost"
export TVDLDAP_LDAPPORT=1389
export TVDLDAP_LDAPSPORT=1636
export TVDLDAP_BINDDN="cn=Directory Manager"
export TVDLDAP_BASEDN="dc=example,dc=com"

# Custom variables for testing
export CUSTOM_VAR="test value"
export VAR_WITH_SPACES="value with spaces"
